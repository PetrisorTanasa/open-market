{% extends 'base.html.twig' %}

{% block body %}
    <table id="datatable">
        <thead>
        <tr>
            <th width="10%">Product</th>
            <th width="5%">Quantity</th>
            <th width="5%">Price</th>
            <th width="70%">Description</th>
            <th width="10%">Actions</th>
            <!-- Add more columns here as needed -->
        </tr>
        </thead>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include DataTables JavaScript library -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#datatable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '{{ path('app_product_read') }}',
                    type: 'GET',
                    dataSrc: 'data', // Specify the key for the data array in the response
                },
                columns: [
                    { data: 'product' },
                    { data: 'quantity' },
                    { data: 'price' },
                    { data: 'description' },
                    {
                        data: null,
                        render: function(data, type, row) {
                            // Retrieve the product ID from the 'id' property in the row object
                            const productId = row.id;

                            var deleteButton = '<button type="button" onclick="window.location.href=\'{{ path('app_product_delete', {'id': '__PRODUCT_ID__'}) }}\'">'.replace('__PRODUCT_ID__', productId) + 'Delete</button>';
                            var updateButton = '<button type="button" onclick="window.location.href=\'{{ path('app_product_update', {'id': '__PRODUCT_ID__'}) }}\'">'.replace('__PRODUCT_ID__', productId) + 'Update</button>';
                            // Generate the update link for each product
                            return updateButton + ' ' + deleteButton;
                        }
                    }
                    // Add more columns here as needed
                ],
            });
        });
    </script>
{% endblock %}
